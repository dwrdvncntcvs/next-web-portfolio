{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "styles/*": ["styles/*"],
      "components/*": ["components/*"],
      "layouts/*": ["layouts/*"],
      "models/*": ["models/*"],
      "utils/*": ["utils/*"],
      "config/*": ["config/*"],
      "hooks/*": ["hooks/*"],
      "variables": ["variables"],
      "assets/*": ["assets/*"],
      "interfaces/*": ["interfaces/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
